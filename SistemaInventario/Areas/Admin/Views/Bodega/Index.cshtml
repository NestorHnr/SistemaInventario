
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <h2 class="text-primary">Lista de bodegas</h2>
    </div>
    <div class="col-lg-6 d-flex justify-content-end align-items-center">
        <a class="btn btn-outline-primary" asp-action="Upsert"> <i class="bi bi-plus-circle-fill"></i> Crear Nueva Bodega</a>
    </div>
</div>

<br />

<div class="p-4 rounded bg-light" style="box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);">
    <table id="tblDatos" class="table table-responsive table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Estado</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/bodega.js"></script>
}
